<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/cl_linearLayout"
        style="@style/NoActionBarTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <include layout="@layout/action_bar" />

        <TextView
            style="@style/CustomTextView"
            android:text="@string/cl_list_name" />

        <EditText
            android:id="@+id/cl_list_name_editText"
            style="@style/CustomEditText"
            android:inputType="text" />

        <TextView
            style="@style/CustomTextView"
            android:text="@string/cl_list_type" />

        <Spinner
            android:id="@+id/cl_list_type_spinner"
            style="@style/CreateListSpinner" />

        <TextView
            style="@style/CustomTextView"
            android:text="@string/cl_list_budget" />

        <EditText
            android:id="@+id/cl_budget_editText"
            style="@style/CustomEditText"
            android:drawableLeft="@drawable/dollar_sign"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/dollar_sign"
            android:inputType="numberDecimal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/cl_list_members_textView"
        style="@style/CustomTextView"
        android:layout_below="@id/cl_linearLayout"
        android:background="@color/grey"
        android:text="@string/cl_list_members_list"
        android:textColor="@color/hard_grey" />

    <ListView
        android:id="@+id/cl_users_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cl_list_members_textView"
        android:background="@color/white" >
    </ListView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/cl_fab"
        style="@style/MainFAB"
        android:layout_alignParentBottom="true"
        app:backgroundTint="@color/fabblue"
        app:borderWidth="0dp"
        app:elevation="6dp"
        app:fabSize="normal"
        app:pressedTranslationZ="12dp" />

</RelativeLayout>