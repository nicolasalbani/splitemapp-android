<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ActivityGrayTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/action_bar" />

    <TextView
        style="@style/CreateListTextView"
        android:text="@string/cl_list_name" />

    <EditText
        android:id="@+id/cl_list_name_editText"
        style="@style/CreateListEditText"
        android:inputType="text" />

    <TextView
        style="@style/CreateListTextView"
        android:text="@string/cl_list_type" />

    <Spinner
        android:id="@+id/cl_list_type_spinner"
        style="@style/CreateListSpinner" />

    <TextView
        style="@style/CreateListTextView"
        android:text="@string/cl_list_budget" />

    <EditText
        android:id="@+id/cl_budget_editText"
        style="@style/CreateListEditText"
        android:drawableLeft="@drawable/dollar_sign"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/dollar_sign"
        android:inputType="numberDecimal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/cl_list_members_textView"
            style="@style/CreateListTextView"
            android:layout_alignParentTop="true"
            android:background="@color/grey"
            android:text="@string/cl_list_members_list"
            android:textColor="@color/hard_grey" />

        <ListView
            android:id="@+id/cl_users_listView"
            android:layout_below="@id/cl_list_members_textView"
            android:layout_above="@id/cl_add_people_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" >
        </ListView>

        <TextView
            android:id="@+id/cl_add_people_textView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:drawableEnd="@drawable/plus_sign_white"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/plus_sign_white"
            android:gravity="center_vertical|end"
            android:paddingEnd="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingStart="20dp"
            android:text="@string/cl_list_add_people"
            android:textColor="@color/blue"
            android:textSize="20sp" />

    </RelativeLayout>

</LinearLayout>