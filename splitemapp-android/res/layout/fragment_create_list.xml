<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ActivityGrayTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/CreateListTextView"
        android:text="@string/cl_list_name" />

    <EditText
        android:id="@+id/cl_list_name_editText"
        style="@style/CreateListEditText"
        android:inputType="text" />

    <TextView
        style="@style/CreateListTextView"
        android:text="@string/cl_list_type" />

    <Spinner
        android:id="@+id/cl_list_type_spinner"
        style="@style/CreateListSpinner" />

    <TextView
        style="@style/CreateListTextView"
        android:text="@string/cl_list_budget" />

    <EditText
        android:id="@+id/cl_budget_editText"
        style="@style/CreateListEditText"
        android:drawableLeft="@drawable/dollar_sign"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/dollar_sign"
        android:inputType="numberDecimal" />

    <TextView
        style="@style/CreateListTextView"
        android:text="@string/cl_list_members_list" />

    <ListView
        android:id="@+id/cl_users_listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.60"
        android:background="@color/white" >
    </ListView>

    <Button
        android:id="@+id/cl_new_list_button"
        style="@style/Button"
        android:layout_width="match_parent"
        android:text="@string/cl_new_list_button" />

</LinearLayout>