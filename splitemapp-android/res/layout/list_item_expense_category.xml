<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@drawable/recycler_color_selector"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/e_expense_category_icon_imageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/e_category_description"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/e_expense_category_title_textView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="12sp" />

</LinearLayout>