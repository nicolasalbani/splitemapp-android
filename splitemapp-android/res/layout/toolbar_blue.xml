<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/actionBar"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    app:layout_collapseMode="pin"
    android:background="@color/seablue"
    app:contentInsetStart="0dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/seablue"
        android:paddingEnd="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingStart="10dp" >

        <TextView
            android:id="@+id/cancel_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/seablue"
            android:drawableLeft="@drawable/ic_arrow_left_seablue_24dp"
            android:drawablePadding="20dp"
            android:drawableStart="@drawable/ic_arrow_left_seablue_24dp"
            android:gravity="start"
            android:text="@string/ab_title"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/done_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@color/seablue"
            android:text="@string/ab_done"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

</android.support.v7.widget.Toolbar>