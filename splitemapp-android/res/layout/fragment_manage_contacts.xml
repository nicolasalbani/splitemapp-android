<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/NoActionBarTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/blue_toolbar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/toolbar_dropshadow" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/mc_contacts_textView"
            style="@style/CustomTextView"
            android:layout_alignParentTop="true"
            android:text="@string/mc_contacts" />

        <ListView
            android:id="@+id/mc_contacts_listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/mc_synchronize_contacts_button"
            android:layout_below="@id/mc_contacts_textView" >
        </ListView>

        <Button
            android:id="@id/mc_synchronize_contacts_button"
            style="@style/Button"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/mc_synchronize_contacts_button" />
    </RelativeLayout>

</LinearLayout>