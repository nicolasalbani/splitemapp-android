<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ActivityGrayTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <Button
        android:id="@+id/mc_synchronize_contacts_button"
        style="@style/Button"
        android:text="@string/mc_synchronize_contacts_button" />
    
    <TextView
        style="@style/CreateListTextView"
        android:text="@string/mc_contacts" />

    <ListView
        android:id="@+id/mc_contacts_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >
    </ListView>

</LinearLayout>