<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true" >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/NoActionBarTheme"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/h_topLayout"
            style="@style/NoActionBarTheme"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_image_height"
            android:layout_alignParentTop="true"
            android:background="@drawable/home_background" >
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/h_projects_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/h_topLayout" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/h_fab"
            style="@style/MainFAB"
            android:layout_alignParentBottom="true"
            app:backgroundTint="@color/fabblue"
            app:borderWidth="0dp"
            app:elevation="6dp"
            app:fabSize="normal"
            app:pressedTranslationZ="12dp" />
    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/h_navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        app:elevation="6dp"
        app:itemTextColor="@color/hard_grey"
        app:headerLayout="@layout/drawer_header_home"
        app:menu="@menu/drawer_home" />

</android.support.v4.widget.DrawerLayout>