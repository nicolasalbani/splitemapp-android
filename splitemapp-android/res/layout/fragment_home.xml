<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/NoActionBarTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <!-- The main content view -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/h_topLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_image_height"
            android:layout_alignParentTop="true"
            android:background="@drawable/home_background" >

            <ImageView
                android:id="@+id/h_main_avatar_imageView"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="25dp"
                android:contentDescription="@string/h_avatar_description"
                android:gravity="center_horizontal"
                android:src="@drawable/avatar_placeholder" />

            <TextView
                android:id="@+id/h_main_full_name_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/h_main_avatar_imageView"
                android:gravity="center_horizontal"
                android:text="@string/h_name"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/h_main_email_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/h_main_full_name_textView"
                android:layout_marginBottom="15dp"
                android:gravity="center_horizontal"
                android:text="@string/h_email"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </RelativeLayout>

        <android.support.v4.widget.SwipeRefreshLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/h_swipe_refresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <android.support.v7.widget.RecyclerView
                android:id="@+id/h_projects_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/h_topLayout" />
        </android.support.v4.widget.SwipeRefreshLayout>

        <TextView
            android:id="@+id/h_empty_list_hint_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/h_topLayout"
            android:layout_marginTop="50dp"
            android:drawableTop="@drawable/ic_list_add_grey_48dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="@string/h_empty_list_hint"
            android:textColor="@color/hard_grey"
            android:textSize="16sp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/h_fab"
            style="@style/MainFAB"
            android:layout_alignParentBottom="true"
            app:backgroundTint="@color/fabblue"
            app:borderWidth="0dp"
            app:elevation="6dp"
            app:fabSize="normal"
            app:pressedTranslationZ="12dp" />
    </RelativeLayout>

    <!-- The navigation drawer -->

    <RelativeLayout
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/grey" >

        <ImageView
            android:id="@+id/h_nav_avatar_imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:contentDescription="@string/h_avatar_description"
            android:src="@drawable/avatar_placeholder" />

        <TextView
            android:id="@+id/h_nav_full_name_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/h_nav_avatar_imageView"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:text="@string/h_name"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/h_nav_email_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/h_nav_full_name_textView"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:text="@string/h_email"
            android:textColor="@color/hard_grey"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/h_nav_email_textView"
            android:background="@color/white"
            android:gravity="bottom"
            android:orientation="vertical" >

            <include layout="@layout/line_separator" />

            <TextView
                android:id="@+id/h_logout_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_logout_grey_24dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_logout_grey_24dp"
                android:gravity="center_vertical|start"
                android:padding="10dp"
                android:text="@string/h_logout"
                android:textColor="@color/hard_grey"
                android:textStyle="bold" />

            <include layout="@layout/line_separator" />

            <TextView
                android:id="@+id/h_manage_contacts_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_manage_contacts_grey_24dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_manage_contacts_grey_24dp"
                android:gravity="center_vertical|start"
                android:padding="10dp"
                android:text="@string/h_manage_contacts"
                android:textColor="@color/hard_grey"
                android:textStyle="bold" />

            <include layout="@layout/line_separator" />

            <TextView
                android:id="@+id/h_synchronize_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_synchronize_grey_24dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_synchronize_grey_24dp"
                android:gravity="center_vertical|start"
                android:padding="10dp"
                android:text="@string/h_synchronize"
                android:textColor="@color/hard_grey"
                android:textStyle="bold" />

            <include layout="@layout/line_separator" />

            <View
                android:layout_width="match_parent"
                android:layout_height="25dp" />
        </LinearLayout>
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>