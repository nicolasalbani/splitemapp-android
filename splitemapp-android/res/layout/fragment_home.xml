<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ActivityTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/ActivityTheme"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.30"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/h_avatar_imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:contentDescription="@string/h_avatar_description"
            android:padding="20dp" 
            android:src="@drawable/avatar_placeholder"/>

        <LinearLayout
            style="@style/ActivityTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/h_first_name_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/h_email_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/h_projects_listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.60"
        android:background="@color/white" >
    </ListView>

    <Button
        android:id="@+id/h_new_list_button"
        style="@style/LoginButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.10"
        android:text="@string/h_new_list_button" />

</LinearLayout>