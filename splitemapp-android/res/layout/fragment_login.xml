<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/NoActionBarTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >

    <TextView
        style="@style/CustomTextView"
        android:text="@string/li_username_hint" />

    <EditText
        android:id="@+id/li_username_editText"
        style="@style/CustomEditText"
        android:inputType="textEmailAddress" />
    
    <View style="@style/BottomLine" />

    <TextView
        style="@style/CustomTextView"
        android:text="@string/li_password_hint" />

    <EditText
        android:id="@+id/li_password_editText"
        style="@style/CustomEditText"
        android:inputType="textPassword" />
    
    <View style="@style/BottomLine" />

    <Button
        android:id="@+id/li_login_button"
        style="@style/Button"
        android:layout_marginTop="22dp"
        android:text="@string/li_log_in_button" />

</LinearLayout>