<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/NoActionBarTheme"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:background="@color/grey" >

    <ImageView
        android:id="@+id/h_avatar_imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:contentDescription="@string/h_avatar_description"
        android:src="@drawable/avatar_placeholder" />

    <TextView
        android:id="@+id/h_full_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/h_avatar_imageView"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:text="@string/h_name"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/h_email_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/h_full_name_textView"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:text="@string/h_email"
        android:textColor="@color/hard_grey"
        android:textSize="12sp" />

    <View
        android:layout_below="@id/h_email_textView"
        android:layout_width="match_parent"
        android:layout_height="15dp" />

</RelativeLayout>