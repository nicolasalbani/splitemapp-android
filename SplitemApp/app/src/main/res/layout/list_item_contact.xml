<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Theme.AppCompat"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/selector_recycler_color"
    android:id="@+id/ap_parentView" >
    
    <TextView
        android:id="@+id/pc_user_full_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:textColor="@color/black"
        android:text="@string/pc_contact_fullname_placeholder"
        android:textSize="20sp"/>

    <RelativeLayout
        android:id="@+id/pc_avatar_view"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp" >

        <ImageView
            android:id="@+id/pc_user_status_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="2dp"
            android:layout_centerInParent="true"
            android:contentDescription="@string/h_avatar_description"
            android:src="@drawable/shape_circle_blue" />

        <TextView
            android:id="@+id/pc_initials_textView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/grey" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/pc_avatar_view"
        android:background="@color/grey" />

</RelativeLayout>